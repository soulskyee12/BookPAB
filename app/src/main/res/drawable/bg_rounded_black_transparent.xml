<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna dasar agak transparan (hitam setengah) -->
    <solid android:color="#80000000" />
    <!--
         #80000000 = 50% transparan hitam
         Bisa disesuaikan, misal #AA000000 (66% hitam), #40000000 (25% hitam), dll.
    -->

    <!-- Sudut membulat -->
    <corners android:radius="16dp" />

    <!-- Garis tepi (stroke) kuning -->
    <stroke
        android:width="2dp"
        android:color="@color/kuning_utama" />

    <!-- Padding opsional -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</shape>
